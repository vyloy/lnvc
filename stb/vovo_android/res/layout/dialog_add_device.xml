<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/device_add_text"
            android:text="类型" />

        <Spinner
            android:id="@+id/dialog_add_device_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/device_type"
            android:prompt="@string/dialog_add_device_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/device_add_text"
            android:text="通道" />

        <Spinner
            android:id="@+id/dialog_add_device_channel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/dialog_add_device_channel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/device_add_text"
            android:text="名称" />

        <EditText
            android:id="@+id/dialog_add_device_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="输入名称" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/device_add_text"
            android:text="位置" />

        <EditText
            android:id="@+id/dialog_add_device_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="输入位置" />
    </LinearLayout>

</LinearLayout>