<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="monitorTitleTextSize">  
        <item name="android:textSize">35dp</item>
    </style>
    <style name="monitor_main_monitortoolbar">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="monitor_main_monitortoolbar_LinearLayout">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="monitor_main_monitortoolbar_LinearLayout_ImageView">  
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>
    <style name="monitor_main_monitortoolbar_LinearLayout_TextView">  
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/category_text_color</item>
    </style>
    <style name="monitor_item" >
        <item name="android:layout_height">150dp</item>
    </style>
    <style name="monitor_item_ImageView" parent="monitor_item"> 
        <item name="android:layout_width">150dp</item>
    </style>
    <style name="monitor_item_TextView">  
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="monitor_item_Button">  
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textSize">45dp</item>
    </style>
    <style name="monitor_loading">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="monitor_loading_ProgressBar">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="monitor_loading_TextView">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="addmonitor_dialog_TextView">  
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">650dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="monitorshow_dialog_CenterLayout">  
        <item name="android:layout_width">600dp</item>
        <item name="android:layout_height">384dp</item>
    </style>
    <style name="monitorshow_dialog_TextView">  
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>
 </resources>