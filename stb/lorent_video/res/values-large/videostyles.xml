<resources>
    <style name="activity_main_GridView">  
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:horizontalSpacing">@dimen/gridview_horizontalSpacing</item>
        <item name="android:columnWidth">@dimen/gridview_columnWidth</item>
        <item name="android:scrollbarSize">30dp</item>
        <item name="android:verticalSpacing">20dp</item>
    </style>
    <style name="activity_main_toolbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="activity_main_toolbar_LinearLayout">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="activity_main_toolbar_LinearLayout_ImageView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
    </style>
    <style name="activity_main_toolbar_LinearLayout_TextView">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/category_text_color</item>
    </style>
    <style name="video_item_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">151dp</item>
    </style>
    <style name="video_item_TextView">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center</item>
        <item name="android:lines">2</item>
    </style>
    <style name="setup_dialog_TextView">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>        
</resources>